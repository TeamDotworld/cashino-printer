<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/darker_gray"
    android:gravity="center"
    android:maxWidth="300dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_gravity="top"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/black"
                android:text="USB Printer"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/printer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List Printer"
                android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/printer_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer Scan"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/printer_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="selected device : " />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/printer_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer Setting"
                android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/print_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer Open"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/print_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="Print Data "
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/html_to_bitmap"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="12dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/create_bitmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Bitmap"
                android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer"
                android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/printer_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer skip"
                android:textAllCaps="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/printer_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Printer close"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>